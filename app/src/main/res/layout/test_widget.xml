<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/actionlimit_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_actionlimit_base" />

    <ImageView
        android:id="@+id/actionlimit_sec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_actionlimit_sec" />

    <ImageView
        android:id="@+id/actionlimit_aro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_actionlimit_arrow" />

    <ImageView
        android:id="@+id/actionlimit_week"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_actionlimit_mon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


</FrameLayout>